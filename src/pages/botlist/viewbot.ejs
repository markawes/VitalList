<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- bot.name %> - VitalList</title>
    <%- include("../parts/head.ejs") %>
</head>
<body>
    <%- include("../parts/navbar.ejs", { bot, user }) %>

    <div class="container">
        <div style="background-color: transparent" class="jumbotron mt-5">
            <div class="row" style="width: 100%;">
                <div class="col-sm-2">

                    <img style="border-radius: 50%;" class="card-img-top" src="https://cdn.discordapp.com/avatars/<%= bot.id %>/<%= bot.avatar %>.png?size=1280">

                </div>
                    <div class="col-sm">
                        <h3><%= bot.name %><small class="text-muted">#<%= bot.discriminator %></small></h3>
                        <%- bot.shortDesc %><br>
                        <hr></hr>
                        <% if (bot.presence && bot.presence.status === "online") { %>
                            <span style="border-radius: 5px;" class="badge badge-success" style="font-size: 20px;"><i class="fa-solid fa-signal"></i> Online</span>
                        <% } else if (bot.presence && bot.presence.status === "idle") { %>
                            <span style="border-radius: 5px;" class="badge badge-warning" style="font-size: 20px;"><i class="fa-solid fa-signal"></i> Idle</span>
                        <% } else if (bot.presence && bot.presence.status === "dnd") { %>
                            <span style="border-radius: 5px;" class="badge badge-danger" style="font-size: 20px;"><i class="fa-solid fa-signal"></i> DND</span>
                        <% } else { %>
                            <span style="border-radius: 5px;" class="badge badge-secondary" style="font-size: 20px;"><i class="fa-solid fa-signal"></i> Offline</span>
                        <% } %>
                        <span style="border-radius: 5px;" class="badge badge-primary" style="font-size: 20px;"><i class="fa-solid fa-server"></i> Servers: <%= bot.servers %></span>
                        <span style="border-radius: 5px;" class="badge badge-danger" style="font-size: 20px;"><i class="fa-solid fa-check-to-slot"></i> Votes: <%= bot.votes %></span><br>
                        <% if (bot.invite) { %>
                            <a href="<%= bot.invite %>" type="button" style="border-radius: 5px;" class="btn btn-primary pr-3 pl-3 mr-1"><i class="fa-solid fa-plus"></i> Invite</a>
                        <% } else { %>
                            <a href="https://discordapp.com/oauth2/authorize?client_id=<%= bot.id %>&scope=bot&permissions=0" type="button" style="border-radius: 5px;" class="btn btn-primary pr-3 pl-3 mr-1">i class="fa-solid fa-plus"></i> Invite</a>
                        <% } %>
                        <a href="/bots/<%= bot.id %>/vote" type="button" style="border-radius: 5px;" class="btn btn-info pr-3 pl-3 mr-1"><i class="fa-solid fa-check-to-slot"></i> Vote</a>
                        <% if (bot.website) { %>
                            <a href="<%= bot.website %>" type="button" style="border-radius: 5px;" class="btn btn-success pr-3 pl-3 mr-1"><i class="fa-solid fa-globe"></i> Website</a>
                        <% } %>
                        <% if (bot.support) { %>
                            <a href="https://discord.gg/<%= bot.support %>" type="button" style="border-radius: 5px;" class="btn btn-info pr-3 pl-3 mr-1"><i class="fa-brands fa-discord"></i> Support</a>
                        <% } %>
                        <% if (bot.owner.includes(user.id)) { %>
                            <a href="/bots/<%= bot.id %>/edit" type="button" style="border-radius: 5px;" class="btn btn-warning pr-3 pl-3 mr-1">Edit</a>
                            <a href="/bots/<%= bot.id %>/delete" type="button" style="border-radius: 5px;" class="btn btn-danger pr-3 pl-3 mr-1">Delete</a>
                        <% } %>
                    </div>
                </div>
            </div>
                    </div>
                    </div>
                    </div>